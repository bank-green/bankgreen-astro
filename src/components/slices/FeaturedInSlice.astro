---
interface Props {
  primary?: {
    logo?: {
      url?: string;
      alt?: string;
    };
    class?: string;
  };
  slice_type?: string;
}

const { primary, slice_type } = Astro.props as Props;

if (!primary?.logo?.url) {
  // Return nothing if no logo
}

const src = `${primary?.logo?.url}&w=400`;
const className = primary?.class ?? 'h-10 w-auto';
---

{primary?.logo?.url && (
  <img
    data-slice-type={slice_type}
    src={src}
    alt={primary.logo.alt || ''}
    class={className}
  />
)}
