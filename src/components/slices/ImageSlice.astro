---
import { Stack, Text } from '@mantine/core';
import PrismicHtml from '../prismic/PrismicHtml.astro';

interface Props {
  primary?: {
    image?: {
      url?: string;
      alt?: string;
    };
    caption?: any;
  };
  slice_type?: string;
}

const { primary, slice_type } = Astro.props as Props;
---

<figure data-slice-type={slice_type}>
  <Stack>
    {primary?.image?.url && (
      <img src={primary.image.url} alt={primary.image.alt || ''} style={{ maxWidth: '100%' }} />
    )}
    {primary?.caption && (
      <figcaption style={{ textAlign: 'center' }}>
        <PrismicHtml content={primary.caption} />
      </figcaption>
    )}
  </Stack>
</figure>
