---
import { Stack } from '@mantine/core';
import PrismicHtml from '../prismic/PrismicHtml.astro';

interface Props {
  primary?: {
    text?: any;
  };
  slice_type?: string;
}

const { primary, slice_type } = Astro.props as Props;
---

<section data-slice-type={slice_type}>
  <Stack>
    {primary?.text && <PrismicHtml content={primary.text} />}
  </Stack>
</section>
