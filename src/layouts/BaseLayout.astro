---
import '../styles/global.css'
import { ExitIntentDialog } from '../components/ExitIntentDialog'
import { GdprBanner } from '../components/GdprBanner'
import { Layout } from '../components/Layout'
import { getSingleSafe } from '../lib/prismic'

const { title, description = 'Bank.Green helps you find ethical and sustainable banks' } =
  Astro.props

// Fetch exit intent content from Prismic (cookies are read client-side)
const exitIntentContent = await getSingleSafe('switchsurveyexit')
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&family=Reddit+Sans:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">

    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title} | Bank.Green</title>
  </head>
  <body>
    <Layout client:load>
      <slot />
    </Layout>
    <GdprBanner client:load />
    <ExitIntentDialog client:idle content={exitIntentContent} />
  </body>
</html>
