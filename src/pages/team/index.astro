import BaseLayout from "@layouts/BaseLayout.astro";
import { getSingleSafe } from "@lib/prismic";

const page = await getSingleSafe("teampage");
---

<BaseLayout title="Who We Are">
  <article>
    <header>
      <h1>Bank.Green Team - Who We Are</h1>
    </header>

    <section>
      <h2>Our Story</h2>
      <!-- Origin story content -->
    </section>

    <section>
      <h2>Our Directors</h2>
      <!-- Director cards from TeamMemberSlice -->
    </section>

    <section>
      <h2>Meet the Team</h2>
      <!-- Department filter: All, Product & Engineering, Content, Research, Development -->
      <nav>
        <ul>
          <li><button>All</button></li>
          <li><button>Product & Engineering</button></li>
          <li><button>Content</button></li>
          <li><button>Research</button></li>
          <li><button>Development</button></li>
