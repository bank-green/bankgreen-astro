---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home | Your Organization">
  <section class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      Welcome to Your Organization
    </h1>
    <p class="mt-6 max-w-2xl text-lg text-gray-600">
      This is your new Astro-powered website. Content from Prismic will go here.
    </p>
  </section>

  <section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-semibold text-gray-900">Latest Updates</h2>
      <p class="mt-4 text-gray-600">
        Content pulled from your CMS will appear here.
      </p>
      <!-- 
        Example of how to render Prismic content:
        
        {posts.map((post) => (
          <article>
            <h3>{post.data.title}</h3>
            <PrismicRichText field={post.data.content} />
          </article>
        ))}
      -->
    </div>
  </section>
</BaseLayout>
